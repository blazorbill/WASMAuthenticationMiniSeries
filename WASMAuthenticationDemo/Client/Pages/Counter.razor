@page "/counter"
@attribute [Authorize]
@inject CurrentUserInfo _currentUser

<h1>Counter</h1>

<p>Current count: @_currentUser.Counter</p>

<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>

@code {
    private void IncrementCount()
    {
        _currentUser.Counter++;
    }
}
